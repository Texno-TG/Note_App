<?xml version="1.0" encoding="utf-8"?>
    <androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#AEEA00"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="18dp"
    android:layout_marginVertical="18dp"
    android:layout_marginHorizontal="18dp">

<androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    android:layout_marginHorizontal="12dp"
    android:paddingVertical="12dp"
            >

            <androidx.appcompat.widget.AppCompatTextView
                android:fontFamily="@font/poppins_semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/title_template"
                android:textSize="24dp"
                android:textStyle="bold"
                android:layout_marginStart="5dp"
                android:textColor="@color/black"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:fontFamily="@font/poppins_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/title_template"
                android:text="@string/app_name"
                app:layout_constraintStart_toStartOf="@id/title_template"
                android:textSize="16sp"
                android:id="@+id/time"
                />

            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/title_template"
                app:layout_constraintBottom_toBottomOf="@id/time"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginHorizontal="5dp"
                android:id="@+id/remove_item"
                android:src="@drawable/baseline_remove_circle_24"
                android:background="?android:attr/panelBackground"
                android:padding="12dp"/>



        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

